{% extends 'backend/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <table class="table table-hover">
            <thead>
            <tr>
                <th class="text-right">#</th>
                <th>Name</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for group in dishGroups %}
                <tr>
                    <th class="text-right">{{ group.id }}</th>
                    <td>{{ group.name }}</td>
                    <td class="text-center">
                        <a href="{{ path('backend_dish_group_edit', {"id": group.id}) }}"><i class="fas fa-edit"></i></a>
                        <a style="color: red" href="{{ path('backend_dish_group_delete', {"id": group.id}) }}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}