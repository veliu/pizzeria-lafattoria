{% extends 'backend/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <table class="table table-hover">
            <thead>
            <tr>
                <th class="text-right">#</th>
                <th>Name</th>
                <th>Beschreibung</th>
                <th>Gruppe</th>
                <th class="text-right">Preis</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for dish in speisekarte %}
                <tr id="{{ dish.number }}">
                    <th class="text-right">{{ dish.number }}</th>
                    <td>{{ dish.name }}</td>
                    <td>{{ dish.description }}</td>
                    <td>{{ dish.dishGroup.name }}</td>
                    <td class="text-right">{{ dish.price|number_format(2, '.', ',') }}</td>
                    <td class="text-center">
                        <a href="{{ path('backend_dish_edit', {"number": dish.number}) }}"><i class="fas fa-edit"></i></a>
                        <a style="color: red" href="{{ path('backend_dish_delete', {"number": dish.number}) }}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}